<Configuration status="WARN" monitorInterval="30">
    <Properties>
        <Property name="LOG_PATTERN">%d{yyyy-MM-dd HH:mm:ss.SSS} ${LOG_LEVEL_PATTERN:-%5p} ${%pid} [%15.15t] %-40.40C{10.}: %m%n%ex</Property>
        <Property name="COLOR_LOG_PATTERN">%d{yyyy-MM-dd HH:mm:ss.SSS} %highlight{${LOG_LEVEL_PATTERN:-%5p}}{FATAL=red, ERROR=red, WARN=yellow, INFO=green, DEBUG=blue, TRACE=blue} %style{%pid}{magenta} [%15.15t] %style{%-40.40C{1.}}{cyan} : %m%n%ex</Property>
        <Property name="LOG_PATTERN_MDC">%d{yyyy-MM-dd HH:mm:ss.SSS} ${LOG_LEVEL_PATTERN:-%5p} ${%pid} [%15.15t] %-40.40C{10.}: ----- %X{User-Agent} - %X -----%m%n%ex</Property>
    </Properties>

    <Appenders>
        <Console name="Console" target="SYSTEM_OUT" follow="true">
<!--            <PatternLayout pattern="${COLOR_LOG_PATTERN}"/>-->
            <PatternLayout pattern="${LOG_PATTERN_MDC}"/>
        </Console>
<!--        <RollingFile name="File"-->
<!--                     fileName="sample-app.log"-->
<!--                     filePattern="sample-app-%d{yyyy-MM-dd}-%i.log">-->
<!--            <PatternLayout pattern="${LOG_PATTERN}"/>-->
<!--            <Policies>-->
<!--                <SizeBasedTriggeringPolicy size="1GB"/>-->
<!--            </Policies>-->
<!--        </RollingFile>-->
    </Appenders>

    <Loggers>
        <Root level="INFO">
            <AppenderRef ref="Console"/>
<!--            <AppenderRef ref="File"/>-->
        </Root>
        <Logger name="com.github.lipinskipawel" level="INFO" additivity="false">
            <AppenderRef ref="Console"/>
        </Logger>

        <!-- Configure external loggers -->
        <!-- Configure netty logging -->
        <Logger name="io.netty" level="WARN" additivity="false">
            <AppenderRef ref="Console"/>
        </Logger>
        <!-- Configure javalin logging -->
        <Logger name="io.javalin" level="WARN" additivity="false">
            <AppenderRef ref="Console"/>
        </Logger>
        <!-- Configure jetty logging -->
        <Logger name="org.eclipse" level="WARN" additivity="false">
            <AppenderRef ref="Console"/>
        </Logger>
    </Loggers>
</Configuration>
